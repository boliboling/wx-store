.order-submitOrder {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    background-color: #fff;
    margin-top: 9px;
    z-index: 999;
    box-shadow: 0 -1px 0 0 rgba(0, 0, 0, 0.1), 0 -0.5px 0.5px 0 rgba(0, 0, 0, 0.2);
}
.order-submitOrder .mui-flex {
    display: flex;
}
.order-submitOrder .realPay {
    flex: 1;
    align-items: center;
    justify-content: flex-end;
    display: flex;
    margin-right: 9px;
}
.order-submitOrder .action {

    /*pointer-events: none;*/

    background-color: #DD2727;
    color: #fff;
}
.order-submitOrder .action .mui-flex {
    padding: 0.75rem 1.2rem;
}
.order-submitOrder .price {
    color: #DD2727;
    font-weight: bolder;
}
.order-submitOrder .count, .order-submitOrder .weight {
    color: #DD2727;
    font-weight: 400;
}