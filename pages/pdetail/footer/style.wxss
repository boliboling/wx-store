.pdetail-submit{
	position: fixed;
	bottom: 0;
	width: 100%;
	display: flex;
	font-size: 14px;
	border-top: 1px solid #DCDCDC;
	height: 43px;
	background-color: #fff;
}
.pdetail-footer-item{
	line-height: 43px;
	color:#fff;
	display: flex;
	justify-content: center;
	position: relative;
}
.collect,.cart{
	color:#1C1C1C;
	padding-top: 10px;
	position: relative;
}
.collect:before,.cart:before{
	font-family: iconfont;
	position: absolute;
	top: -9px;
	font-size: 16px;
	left: 50%;
	transform: translate(-50%,0);
}
.collect{
	flex:1.3;
	border-right: 1px solid #DCDCDC;
}
.collect:before{
	content:'\e600';
}
.cart{
	flex:1.3;
}
.cart:before{
	content:'\e623';
}
.cart_num:after{
	content:attr(data-num);
	position: absolute;
	border: 2px solid #ff9402;
	border-radius: 50%;
	width: 12px;
	height: 12px;
	right: 15%;
	top: 0;
	line-height: 12px;
	color: #ff9402;
	text-align: center;
	background-color: #ECFF72;
	font-size: 11px;
}
.footer-active{
	color: #ff9402;
}
.add-to-cart{
	flex:3;
	background-color:#ff9402;
}
.shopping{
	flex:3;
	background-color: #ff5000;
}