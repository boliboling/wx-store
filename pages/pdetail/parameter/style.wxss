.para-wrap { display: none; }
.para-wrap-show { }
.para-wrap-bg { position: fixed; height: 100%; width: 100%; left: 0; top: 0; background-color: rgba(0, 0, 0, 0.5); z-index: 1; }
.para-wrap-main { position: fixed; z-index: 2; background-color: #fff; width: 100%; left: 0; bottom: 0; }
.para-item { border-bottom: 1px solid #adadad; padding: 13px 10px; }
.para-header { display: flex; flex-direction: row; padding: 10px; }
.para-left { }
.para-prod-image { width: 200rpx; height: 200rpx; }
.para-right { font-size: 14px; }
.para-right view { margin: 5px 0; }
.para-name { }
.para-price { }
.para-price span { color: #ff9402; }
.para-num { }
.para-choose { }
.para-number { display: flex; flex-direction: row; align-items: center; }
.number-operate { display: flex; flex-direction: row; }
.number-item { border: 1px solid #adadad; margin: 0 6px 0 0; align-self: center; }
.number-del, .number-add { width: 45rpx; height: 45rpx; position: relative; }
.number-del:before, .number-add:before, .number-add:after { content: ''; position: absolute; left: 50%; top: 50%; transform: translate(-50%, -50%); background-color: #adadad; }
.number-del:before, .number-add:before { height: 1px; width: 80%; }
.number-add:after { width: 1px; height: 80%; }
.number-del { }
.number-show { width: 120rpx; height: 60rpx; text-align: center; line-height: 60rpx; }
.number-add { }
.total-fee { color: #ff9402; }
.para-submit { padding: 10px 5px; }
.para-ok { color: #fff; background-color: #ff5000; text-align: center; height: 70rpx; line-height: 70rpx; }
.para-title{
  font-size: 14px;
  padding: 7px 0;
}
.para-list{
  display: flex;
  flex-wrap: wrap;
}
.para-list-item{
  font-size: 14px;
  border: 1px solid #DDD;
  border-radius: 5px;
  padding: 3px 9px;
}
.para-list-item-choose{
  color: #fff;
  background-color: #ff5000;
}