<!--pay.wxml-->
<view class="container">
    <view class="weui-cells">
        <view class="weui-cell">
            <view class="weui-cell__bd">
                <p>订单号</p>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access">{{order_sn}}</view>
        </view>
        <view class="weui-cell">
            <view class="weui-cell__bd">
                <p>账号</p>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access">{{user_name}}</view>
        </view>
        <view class="weui-cell">
            <view class="weui-cell__bd">
                <p>付款方式</p>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access">微信支付</view>
        </view>
        <view class="weui-cell">
            <view class="weui-cell__bd">
                <p>需付款</p>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access">{{total_fee}}</view>
        </view>
    </view>
    <button class="weui-btn" type="primary" bindtap="pay">确认支付</button>
</view>
